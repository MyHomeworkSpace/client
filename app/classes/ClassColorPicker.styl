.classColorPickerContainer
	display: inline-block
	position: relative

.classColorPicker
	border: 1px solid #ccc
	border-radius: 4px
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
	cursor: pointer
	font-size: 18px
	padding: 6px 12px
	user-select: none
	width: 300px
	
	.classColorPickerOutput
		float: left
		width: 250px
		height: 25px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap
		
		.classColorPickerOutputNoSelect
			color: #aaa
			font-style: italic

		.classColorPickerColor
			width: 25px
			height: 25px

	.classColorPickerAction
		color: #ccc
		float: right
	
	.classColorPickerClear	
		clear: both

.classColorPicker:hover
	.classColorPickerAction
		color: #333