.hiddenClassList
	.hiddenClassListAdd
		.pickerContainer, .btn
			vertical-align: text-top

		.btn
			margin-left: 2px
			margin-bottom: 10px

	.actionBtn
		margin-top: 2px
		margin-bottom: 10px
		margin-left: 2px

	.hiddenClassListContents
		border: solid 1px black
		width: 400px
		height: 200px
		overflow-y: auto

		p
			padding: 10px

		.hiddenClassListClass
			font-size: 14px
			padding: 5px

			.hiddenClassListClassRemove
				color: #555
				float: right

			.hiddenClassListClassRemove:hover
				cursor: pointer
				color: black

		.hiddenClassListClass:hover
			background: #ccc