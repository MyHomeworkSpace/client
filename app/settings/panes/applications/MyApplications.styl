.myApplications
	border: solid 1px black
	width: 100%
	overflow-y: scroll
	margin-top: 10px

	.application:hover
		background: #ccc

	.application
		box-sizing: content-box
		padding: 10px

		.applicationInfo
			float: left

			.applicationName
				font-size: 18px

			.applicationAuthor
				font-size: 16px

		.applicationControls
			float: right
			line-height: 45px

			button
				margin-left: 5px


	.applicationClear
		clear: both

.myApplications.loading, .myApplications.empty
	padding: 1rem