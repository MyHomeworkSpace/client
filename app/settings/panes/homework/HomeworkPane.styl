.homeworkPane
	h4:first-of-type
		margin-top: 0

	.homeworkSettingsDescription
		margin-bottom: 10px

	.homeworkPaneClassesAdd
		.pickerContainer, .btn
			vertical-align: text-top

		.btn
			margin-left: 2px
			margin-bottom: 10px

	select
		font-size: 16px

	.actionBtn
		margin-top: 2px
		margin-bottom: 10px
		margin-left: 2px

	.homeworkSettingsClassList
		border: solid 1px black
		width: 400px
		height: 200px
		overflow-y: auto

		p
			padding: 10px

		.homeworkSettingsClass
			font-size: 14px
			padding: 5px

			.homeworkSettingsClassRemove
				color: #555
				float: right

			.homeworkSettingsClassRemove:hover
				cursor: pointer
				color: black

		.homeworkSettingsClass:hover
			background: #ccc