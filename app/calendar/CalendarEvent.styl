.calendarEvent.calendarEventTiny
	height: 16px
	line-height: 16px
	margin-bottom: 2px
	position: relative

	.calendarEventDurationLine
		height: 100%

	.calendarEventInfo
		display: flex

		.calendarEventTime
			flex-shrink: 0
			font-size: 12px
			font-weight: bold
			margin-right: 4px

		.calendarEventName
			font-size: 12px
			font-weight: normal
			height: initial

.calendarEvent.calendarEventTiny:hover
	height: 17px

.calendarEvent.calendarEventCancelled
	background: transparent
	border: dashed 1px #555555
	border-left: none

.calendarEvent.calendarEventCancelled:hover
	margin-top: 0

.calendarEvent
	background: white
	cursor: pointer
	width: 100%
	overflow: hidden
	padding-left: 4px
	padding-right: 2px
	position: absolute
	z-index: 2
	
	.calendarEventDurationLine
		background: #555
		position: absolute
		top: 0
		left: 0
		width: 2px
	
	.calendarEventName
		font-size: 13px
		font-weight: bold
		height: 17px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap

		.calendarEventRecur
			margin-right: 0.25rem
	
	.calendarEventTeacher, .calendarEventTime
		font-size: 12px

.calendarEvent:hover
	border-top: solid 1px #aaa
	border-left: none
	border-right: solid 1px #aaa
	border-bottom: solid 1px #aaa
	padding-right: 1px
	margin-top: -1px