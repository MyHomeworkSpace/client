.eventModal
	.eventModalName
		font-size: 18px
		margin-bottom: 5px
		height: 40px
	
	.eventModalLabel
		width: 75px
		height: 34px
		line-height: 34px
		text-align: right
		padding-right: 5px
	
	.eventModalData
		padding: 0

	.eventModalRepeat
		height: 34px
		margin-bottom: 4px

		.row
			height: 34px
			line-height: 34px

			.eventModalRepeatCheckbox
				height: 34px
				line-height: 34px
				width: 1rem

				input[type=checkbox]
					margin-right: 0.5rem

			.col-md-11
				height: 34px
				padding-left: 0.5rem

				input[type=number]
					width: 4rem
					height: 2rem
					line-height: 1
					margin: 0 0.5rem

				.eventModalRepeatUntil
					display: inline-block
					line-height: 20px

				.eventModalRepeatAlign
					display: inline-block
					height: 34px
					line-height: 34px
					vertical-align: top

				.pickerContainer
					margin-left: 0.5rem

				.eventModalRepeatAction
					color: #6a6a6a
					cursor: pointer
					display: inline-block
					margin-left: 0.5rem
					text-decoration: underline dashed

				.eventModalRepeatAction:hover
					color: #333333

	.eventModalRepeat.open
		height: 68px

	.eventModalLocation
		margin-bottom: 5px

	.eventModalDescription
		resize: vertical
		min-width: 100%
		max-width: 100%
		min-height: 8rem
		max-height: 20rem