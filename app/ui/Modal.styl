@keyframes modal-appear
	0%
		opacity: 0
		transform: scale(0.8)
 	100%
		opacity: 1
		transform: scale(1)

.modal-animation
	animation: modal-appear .3s ease 1

.modal.modal-preact
	pointer-events: none

	.modal-dialog
		margin-top: 0

	.modal-header
		cursor: grab
		user-select: none

	.modal-header:active
		cursor: grabbing

	.modal-content
		pointer-events: all

.modal
	.modal-body
		p:last-child
			margin-bottom: 0

.modalOverlay
	position: fixed
	background: black
	opacity: 0.7
	width: 100%
	height: 100%
	pointer-events: all