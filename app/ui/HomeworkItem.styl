.hwItem
	cursor: default
	background: white
	border-radius: 3px
	border: solid 1px #cbcccd
	border-left-width: 4px
	border-top-left-radius: 0
	border-bottom-left-radius: 0
	box-shadow: 0 1px 3px hsla(0, 0%, 0%, 0.2)
	padding: 0.8rem
	padding-right: 30px
	margin-bottom: 1.2rem
	position: relative
	transition: all 0.2s

.hwItem.done, .hwItem.done:hover
	background-color: #d0d0d0

.hwItem:hover
	background-color: #dfdfdf
	box-shadow: 0 4px 6px hsla(0, 0%, 0%, 0.2)

.hwItem.done .hwName, .hwItem.done .hwSubText
	text-decoration: line-through

.hwItem .hwName
	font-size: 16px
	font-weight: 500

.hwLate
	color: red

.hwOptions
	color: rgb(60, 60, 60)
	font-size: 16px
	opacity: 0
	position: absolute
	right: 10px
	transition: all 0.2s

.hwOptions i
	margin-left: 4px

.hwOptions i:hover
	cursor: pointer
	color: rgb(10, 10, 10)

.hwItem:hover .hwOptions
	opacity: 1

.hwDescIcon
	position: absolute
	right: 10px
	bottom: 8px
	cursor: pointer
	font-size: 15px