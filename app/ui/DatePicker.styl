.datePickerContainer
	display: inline-block
	position: relative

.datePicker
	border: 1px solid #ccc
	border-radius: 4px
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
	cursor: pointer
	padding: 6px 12px
	user-select: none
	width: 225px
	
	.datePickerOutput
		float: left

	.datePickerAction
		color: #ccc
		float: right
	
	.datePickerClear	
		clear: both

.datePicker:hover
	.datePickerAction
		color: #333