.feedbackControlContainer
	position: relative
	display: inline-block
	vertical-align: middle
	width: 93px
	height: 40px
	
	.feedbackControl
		cursor: pointer
		display: inline-block
		font-size: 14px
		margin-right: 5px
		width: 93px
		height: 36px
		padding-left: 5px
		padding-right: 5px
		position: absolute
		top: 0
		left: 0
		transition: all 0.2s
		vertical-align: middle
		
		.fa
			font-size: 24px

	.feedbackControl:hover
		background: rgba(220, 220, 220, 0.5)

	.feedbackControl.opened
		background: white
		color: black