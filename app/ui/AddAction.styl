.addAction
	display: block
	font-size: 16px
	line-height: 50px
	margin: 0 auto
	text-align: center
	width: 300px
	height: 50px
	user-select: none
	z-index: 100
		
	.addActionButton
		cursor: pointer
		transition: all .2s
		z-index: 99
	
	.addActionButton:hover
		transform: scale(1.1)
	
	.addActionInput
		background: transparent
		border: none
		width: 250px
		height: 30px

	.addActionInput:focus
		outline: none
	
	.addActionClose
		cursor: pointer
		font-size: 18px
		float: right
		position: relative
		width: 20px !important