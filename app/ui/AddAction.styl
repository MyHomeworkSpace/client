.addAction
	display: block
	font-size: 16px
	line-height: 55px
	margin: 0 auto
	text-align: center
	width: 300px
	height: 55px
	user-select: none
	position: relative
	z-index: 100
		
	.addActionButton
		cursor: pointer
		transition: all .2s
		z-index: 99
	
	.addActionButton:hover
		transform: scale(1.1)
	
	.addActionInput
		background: transparent
		border: solid 1px white
		padding: 6px
		width: 250px
		height: 30px
		line-height: 1
	
	.addActionInput::-webkit-input-placeholder
		color: rgb(225, 225, 225)
	.addActionInput::-moz-placeholder
		color: rgb(225, 225, 225)
	.addActionInput:-moz-placeholder
		color: rgb(225, 225, 225)
	.addActionInput:-ms-input-placeholder
		color: rgb(225, 225, 225)

	.addActionInput:focus
		outline: none
	
	.addActionClose
		cursor: pointer
		font-size: 18px
		float: right
		position: relative
		width: 20px !important

.topBar.inverted
	.addActionInput
		border-color: black
	
	.addActionInput::-webkit-input-placeholder
		color: rgb(30, 30, 30)
	.addActionInput::-moz-placeholder
		color: rgb(30, 30, 30)
	.addActionInput:-moz-placeholder
		color: rgb(30, 30, 30)
	.addActionInput:-ms-input-placeholder
		color: rgb(30, 30, 30)