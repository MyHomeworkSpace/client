.ColorPickerContainer
	display: inline-block
	float: left
	margin-bottom: -5px
	position: relative

.ColorPicker
	border: 1px solid #ccc
	border-radius: 4px
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
	display: inline-block
	cursor: pointer
	font-size: 18px
	padding: 6px 12px
	user-select: none
	width: 65px
	background-color: white
	
	.ColorPickerOutput
		float: left
		height: 25px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap
		
		.ColorPickerOutputNoSelect
			color: #aaa
			font-style: italic

		.ColorPickerColor
			border-radius: 100%
			margin-top: 5px
			width: 16px
			height: 16px

	.ColorPickerAction
		color: #ccc
		float: right
	
	.ColorPickerClear	
		clear: both

.ColorPicker:hover
	.ColorPickerAction
		color: #333