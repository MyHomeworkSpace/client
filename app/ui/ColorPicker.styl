.colorPickerContainer
	display: inline-block
	float: left
	margin-bottom: -5px
	position: relative

.colorPicker
	border: 1px solid #ccc
	border-radius: 4px
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
	display: inline-block
	cursor: pointer
	font-size: 18px
	padding: 6px 12px
	user-select: none
	width: 65px
	background-color: white
	
	.colorPickerOutput
		float: left
		height: 25px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap
		
		.colorPickerOutputNoSelect
			color: #aaa
			font-style: italic

		.colorPickerColor
			border-radius: 100%
			margin-top: 5px
			width: 16px
			height: 16px

	.colorPickerAction
		color: #ccc
		float: right
	
	.colorPickerClear
		clear: both

.colorPicker:hover
	.colorPickerAction
		color: #333