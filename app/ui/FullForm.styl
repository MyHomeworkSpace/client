.page.fullPage
	padding: 4rem 0
	z-index: 999

	background-image: url("/img/backgrounds/bg1.jpg")
	background-size: cover

	top: 0
	left: 0

	width: 100%
	height: 100%

	.fullFormContainer
		background: rgba(255, 255, 255, 0.8)
		border-radius: 5px
		margin: 0 auto
		padding: 2rem
		width: 50rem

		.fullForm
			width: 100%

			.fullFormTitle
				font-size: 3rem
				margin-top: 0
				margin-bottom: 0.5rem

			.input-group
				margin-bottom: 1rem
				width: 100%

				.form-control
					font-size: 2rem
					height: 5rem

				.input-group-addon
					font-size: 1.75rem

			.btn
				margin-top: 0