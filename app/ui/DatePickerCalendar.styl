.datePickerCalendar
	background: white
	border: 1px solid #ccc
	border-radius: 0 0 4px 4px
	box-shadow: 0 1px 3px hsla(0, 0%, 0%, 0.2)
	font-size: 14px
	line-height: 20px
	position: absolute
	top: 34px
	width: 250px
	height: auto
	z-index: 1000
	
	.datePickerCalendarControls
		font-size: 18px
		height: 35px
		position: relative

		.datePickerCalendarControl
			display: inline-block
			text-align: center
			position: absolute
			top: 0
			width: 26px
			
			.btn
				border-top: none
				display: inline-block
				text-align: center
				width: 20px
			
				.fa
					position: relative
					left: -6px

		.datePickerCalendarControl.left
			.btn
				border-left: none
				border-top-right-radius: 0
				border-bottom-left-radius: 0

		.datePickerCalendarControl.right
			.btn
				border-right: none
				border-top-left-radius: 0
				border-bottom-right-radius: 0
			
		.datePickerCalendarControl:first-child
			left: 0
		
		.datePickerCalendarControl:nth-child(3)
			right: 0
			
		.datePickerCalendarMonth
			display: inline-block
			line-height: 35px
			position: absolute
			top: 0
			text-align: center
			width: 100%
			z-index: -1
	
	.datePickerCalendarToday
		float: right

.darkTheme
	.datePickerCalendar
		color: black
