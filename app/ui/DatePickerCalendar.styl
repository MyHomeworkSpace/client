.datePickerCalendar
	background: white
	border: 1px solid #ccc
	border-radius: 4px
	font-size: 14px
	line-height: 20px
	position: absolute
	top: 34px
	width: 251px
	height: auto
	z-index: 1000
	
	.datePickerCalendarControls
		font-size: 18px
		height: 35px
		position: relative
		
		.datePickerCalendarControl
			display: inline-block
			text-align: center
			position: absolute
			top: 0
			width: 26px
			
			.btn
				display: inline-block
				text-align: center
				width: 20px
			
				.fa
					position: relative
					left: -3px
			
		.datePickerCalendarControl:first-child
			left: 0
		
		.datePickerCalendarControl:nth-child(3)
			right: 0
			
		.datePickerCalendarMonth
			display: inline-block
			line-height: 35px
			position: absolute
			top: 0
			text-align: center
			width: 100%
			z-index: -1
	
	.datePickerCalendarToday
		float: right