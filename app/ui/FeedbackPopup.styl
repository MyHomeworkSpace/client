.feedbackPopup
	background: white
	color: black
	border-top-left-radius: 0
	border-top-right-radius: 0
	border-bottom-left-radius: 4px
	border-bottom-right-radius: 4px
	border: solid 1px black
	border-top: none
	font-size: 14px
	line-height: 1.1
	padding: 5px
	position: absolute
	top: 38px
	right: 4px
	vertical-align: top
	width: 150px
	height: 200px
	overflow: hidden
	transition: all 0.2s ease-in-out
	z-index: 2

	.feedbackPopupHeading
		font-size: 16px
		
	.feedbackPopupFeeling
		width: 135px
		
		.feedbackPopupFeelingOption
			border: solid 1px black
			cursor: pointer
			margin-top: 5px
			padding: 5px
			width: 135px
			
		.feedbackPopupFeelingOption:hover
			background: #ccc
			
		.feedbackPopupFeelingOption.selected
			background: #bbb
	
	.feedbackPopupMessageContainer
		padding-left: 25px
		padding-right: 0

		.feedbackPopupMessage
			height: 125px
			margin-top: 5px
			padding-left: 8px
			padding-right: 8px
			resize: none
		
		.feedbackPopupMessageAction
			margin-top: 5px
			
			div
				float: right
				
			.feedbackPopupMessageActionInfo
				font-size: 12px
				margin-right: 5px
				line-height: 30px
				height: 30px
				
			.feedbackPopupMessageActionClear
				clear: both

.feedbackPopup.feedbackPopupExtended
	width: 375px

.feedbackPopup.feedbackPopupSuccess
	.feedbackPopupHeading
		font-size: 18px
		margin-bottom: 5px