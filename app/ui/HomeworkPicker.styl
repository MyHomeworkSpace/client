.homeworkPickerContainer
	display: inline-block
	position: relative

.homeworkPicker
	border: 1px solid #ccc
	border-radius: 4px
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
	cursor: pointer
	font-size: 18px
	padding: 6px 12px
	user-select: none
	width: 300px
	
	.homeworkPickerOutput
		float: left
		width: 250px
		height: 25px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap
		
		.homeworkPickerOutputNoSelect
			color: #aaa
			font-style: italic

	.homeworkPickerAction
		color: #ccc
		float: right
	
	.homeworkPickerClear	
		clear: both

.homeworkPicker:hover
	.homeworkPickerAction
		color: #333