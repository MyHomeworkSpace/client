.topBarButton, .pickerContainer .picker.topBarDropdown
	cursor: pointer
	color: #bcbcbc
	display: inline-block
	font-size: 1.5rem
	height: 100%
	line-height: 50px
	padding: 0 0.8rem
	transition: all 0.1s ease-in-out
	text-align: center
	vertical-align: top

	.pickerAction
		color: #bbbbbb

	.topBarButtonText
		transition: all 0.1s ease-in-out

		.fa
			font-size: 2.5rem

		.fa, .topBarButtonLabel
			vertical-align: middle

.topBarButton:hover, .pickerContainer:hover .picker.topBarDropdown .pickerAction
	color: #cccccc
	border-bottom: solid 2px rgba(255,255,255,0.9)

.topBarButton:active, .pickerContainer:active .picker.topBarDropdown .pickerAction
	color: #dddddd
	border-bottom: solid 3px rgba(255,255,255,0.9)

.topBarButton.selected, .pickerContainer.selected .picker.topBarDropdown .pickerAction
	border-bottom: solid 4px rgba(255,255,255,0.9)
	color: #ffffff

	.topBarButtonText
		position: relative
		top: -0.2rem