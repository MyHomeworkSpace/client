.topBarButton, .pickerContainer .picker.topBarDropdown
	cursor: pointer
	color: #bcbcbc
	display: inline-block
	font-size: 1.5rem
	height: 100%
	line-height: 50px
	padding: 0 0.8rem
	transition: all 0.1s ease-in-out
	text-align: center
	vertical-align: top

	.pickerAction
		color: #bbbbbb

	.topBarButtonText
		position: relative
		top: 0
		transition: all 0.1s ease-in-out

		.fa
			font-size: 2.5rem

		.fa, .topBarButtonLabel
			vertical-align: middle

.topBarButton:hover
	border-bottom: solid 2px rgba(255, 255, 255, 0.9)
	color: #cccccc

.topBarButton:active
	border-bottom: solid 3px rgba(255, 255, 255, 0.9)
	color: #dddddd

.topBarButton.selected
	border-bottom: solid 4px rgba(255, 255, 255, 0.9)
	color: #ffffff

	.topBarButtonText
		top: -0.2rem

.topBar.inverted, .topBar.open
	.topBarButton, .pickerContainer .picker.topBarDropdown
		color: #545454
	
		.pickerAction
			color: #555555
	
	.topBarButton:hover
		border-bottom: solid 2px rgba(0, 0, 0, 0.9)
		color: #444444

	.topBarButton:active
		border-bottom: solid 3px rgba(0, 0, 0, 0.9)
		color: #333333

	.topBarButton.selected
		border-bottom: solid 4px rgba(0, 0, 0, 0.9)
		color: #000000

.topBar.open
	.topBarButton, .topBarButton:hover, .topBarButton:active, .topBarButton.selected
		border-bottom: none

	.topBarButton
		height: 50px
		text-align: left
		padding: 0 0.5rem

	.topBarButton:hover
		background-color: rgba(220, 220, 220, 0.5)
		cursor: pointer