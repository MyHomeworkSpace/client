.topBar
	color: white
	display: flex
	width: 100%
	height: 50px
	position: absolute
	top: 0
	left: 0
	user-select: none

	.topName
		display: inline-block
		float: right
		font-size: 16px
		margin-left: 5px
		margin-right: 5px
		height: 50px
		line-height: 50px

	.logout
		display: inline-block
		float: right
		font-size: 22px
		padding-left: 5px
		padding-right: 5px
		width: 30px
		height: 50px
		line-height: 50px
		text-align: center
		transition: all 0.2s

	.logout:hover
		background-color: rgba(220, 220, 220, 0.5)
		cursor: pointer

.topBar.inverted
	color: black