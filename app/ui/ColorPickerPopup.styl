.colorPickerPopup
	top: 39px
	width: 301px

	.colorPickerPopupColor
		border: solid 2px transparent
		border-radius: 100%
		cursor: pointer
		display: inline-block
		margin-right: 10px
		margin-bottom: 5px
		width: 25px
		height: 25px

	.colorPickerPopupColor:hover
		border-color: #aaa

	.colorPickerPopupColor.selected
		border-color: #555

	.customColorSwatch
		overflow: hidden
		text-align: center
		font-size: 10px
		line-height: 25px
		border: 1px solid #ccc

		.customColor
			display: none