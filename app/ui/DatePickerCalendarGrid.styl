.datePickerCalendarGrid
	padding-left: 2px
	margin: 0.1rem auto 0 auto
	width: 248px

	.datePickerCalendarGridItem
		display: inline-block
		text-align: center
		width: 35px

	.datePickerCalendarGridHeader
		color: #606060

	.datePickerCalendarGridItemDay
		border-radius: 100%
		font-size: 1.5rem
		cursor: pointer
		width: 33px
		height: 33px
		margin: 0 1px 0.25rem 1px
		line-height: 37px

	.datePickerCalendarGridItemDay.datePickerCalendarGridItemDayToday
		background: #fff266

	.datePickerCalendarGridItemDay:hover, .datePickerCalendarGridItemDay.datePickerCalendarGridItemDayToday:hover
		background: #eee

	.datePickerCalendarGridItemDay.datePickerCalendarGridItemDaySelected
		background: #ccc

	.datePickerCalendarGridItemDayExtra
		color: #a0a0a0