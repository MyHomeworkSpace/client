.pickerContainer
	display: inline-block
	position: relative

	.picker
		border: 1px solid #ccc
		border-radius: 4px
		box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
		cursor: pointer
		padding: 6px 12px
		user-select: none
		width: 225px
		
		.pickerOutput
			float: left

		.pickerAction
			color: #ccc
			float: right
		
		.pickerClear	
			clear: both

	.picker:hover
		.pickerAction
			color: #333