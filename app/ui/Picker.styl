.pickerContainer
	display: inline-block
	position: relative

	.picker
		background-color: white
		border: 1px solid #ccc
		border-radius: 4px
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075)
		cursor: pointer
		padding: 6px 12px
		transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s
		user-select: none
		width: 225px
		
		.pickerOutput
			float: left

		.pickerAction
			color: #ccc
			float: right
		
		.pickerClear	
			clear: both
	
	.picker.focus
		border-color: #66afe9
		outline: 0
		-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)

	.picker.editable
		padding: 0

		input[type=text]
			border: none
			border-radius: 4px
			float: left
			padding: 6px 24px 6px 12px
			width: 100%

		.pickerAction
			position: absolute
			right: 10px
			top: 50%
			margin-top: -10px

	.picker:hover
		.pickerAction
			color: #333

	.pickerPopup
		background: white
		border: 1px solid #ccc
		border-radius: 4px
		font-size: 14px
		line-height: 20px
		position: absolute
		top: 34px
		width: 251px
		height: auto
		z-index: 1000
		padding: 10px