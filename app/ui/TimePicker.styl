.timePickerContainer
	display: inline-block
	position: relative

.timePicker
	border: 1px solid #ccc
	border-radius: 4px
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
	cursor: pointer
	padding: 6px 12px
	user-select: none
	width: 150px
	
	.timePickerOutput
		float: left

	.timePickerAction
		color: #ccc
		float: right
	
	.timePickerClear	
		clear: both

.timePicker:hover
	.timePickerAction
		color: #333